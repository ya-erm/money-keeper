  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Vite DEV",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["vite", "dev", "--host"],
      "type": "node",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "Local: http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s"
      }
    }
  ]
}
